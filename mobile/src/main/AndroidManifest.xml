<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iblancasa.ArduBand" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iblancasa.ArduBand.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.iblancasa.ArduBand.About"
            android:label="@string/app_name"
            android:parentActivityName="com.iblancasa.ArduBand.About" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iblancasa.ArduBand.About" />
        </activity>


    </application>

</manifest>
